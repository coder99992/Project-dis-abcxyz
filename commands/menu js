const { SlashCommandBuilder, ActionRowBuilder, StringSelectMenuBuilder } = require('discord.js');

module.exports = {
    data: new SlashCommandBuilder()
        .setName('menu')
        .setDescription('Hi·ªÉn th·ªã menu ch·ªçn t√πy ch·ªçn'),
    async execute(interaction) {
        const menu = new StringSelectMenuBuilder()
            .setCustomId('my_menu')
            .setPlaceholder('Ch·ªçn m·ªôt t√πy ch·ªçn...')
            .addOptions(
                { label: 'T√πy ch·ªçn 1', value: 'option_1' },
                { label: 'T√πy ch·ªçn 2', value: 'option_2' },
                { label: 'T√πy ch·ªçn 3', value: 'option_3' }
            );

        const row = new ActionRowBuilder().addComponents(menu);
        await interaction.reply({ content: 'üìã M·ªùi b·∫°n ch·ªçn m·ªôt t√πy ch·ªçn:', components: [row] });
    }
};
